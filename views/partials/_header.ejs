<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (user) { %>
      <form class="form-inline" action="/logout" method="POST">
        <div class="form-group mb-2">
          <div class="pull-left" style="margin-right:150px"></div>
        <span>You are logged in as <%= user.email %></span>
        <div class="pull-left" style="margin-right:20px"></div>
        <button type="submit" class="btn btn-primary">Logout</button>
        </div>
      </form>
        <% } else { %>
        <form class="form-inline" action="/login" method="POST">
          <div class="form-group mb-2">
            <a href='/register'></a>
            <input type="email" name="email" placeholder="Please enter your email" style="width: 270px; margin: 1em">
            <div class="pull-left" style="margin-right:30px"></div>
            <button type="submit" class="btn btn-primary">Login</button>
          </div>
        </form>
          <% } %>
    </div>
  </nav>
</header>